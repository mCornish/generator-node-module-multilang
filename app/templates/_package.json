{
	"name": "<%= name %>",
	"description": "<%= description %>",
	"version": "0.0.0",
	"license": "MIT",
	"main": "lib/index.js",
	"author": "<%= author %>",
	"scripts": {
<% if(language === 'coffee') { %>
		"lint": "coffeelint src/",
		"test": "mocha --compilers coffee:coffee-script test/**/*.*",
		"build": "coffee -c -o lib/ src/",
<% } else { %>
		"lint": "echo nop",
		"test": "mocha test/**/*.*",
		"build": "echo nop",
<% } %>

		"prebuild": "npm run lint",
		"watch": "onchange src/ -- npm run build && echo Done",
		"dev": "npm run watch",
		"prepublish": "npm run build"
	},
	"devDependencies": {
<% if(language === 'coffee') { %>
		"coffee-script": "latest",
		"coffeeify": "latest",
		"coffeelint": "latest",
<% } %>
		"mocha": "latest",
		"chai": "latest",
		"onchange": "latest"
	}
}
